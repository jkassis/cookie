{
  "name": "cookie",
  "version": "1.0.0",
  "description": "cookie automation system",
  "scripts": {
    "assets.bundle": "mkdir -p bundle && rsync -avm --exclude-from=.bundleignore src/ bundle/",
    "assets.bundle.watch": "chokidar 'src/**/*' -i '**/*.ts' -i '**/*.js' -c \"yarn assets.bundle\"",
    "bundle": "yarn run ts.build && yarn run ts.bundle && yarn run assets.bundle",
    "bundle.watch": "concurrently \"yarn ts.bundle.watch\" \"yarn assets.bundle.watch\"",
    "clean": "rm -rf bundle build tsconfig.tsbuildinfo",
    "ts.bundle": "esbuild src/Main.ts --bundle --outfile=bundle/Main.js --format=esm --sourcemap",
    "ts.bundle.min": "esbuild src/Main.ts --bundle --outfile=bundle/Main.js --format=esm --minify --sourcemap",
    "ts.bundle.watch": "esbuild src/Main.ts --bundle --outfile=bundle/Main.js --format=esm --sourcemap --watch",
    "ts.build": "tsc",
    "ts.build.watch": "tsc --watch"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "esbuild": "^0.24.0",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "chai": "^6.2.0",
    "chai-as-promised": "^8.0.2",
    "mocha": "^11.7.4",
    "typescript": "^5.0.0",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@jkassis/luxon": "^2.0.8",
    "@jkassis/nexttime": "^1.0.26",
    "@shopify/storefront-api-client": "^1.0.9",
    "@types/auth0-lock": "^11.27.9",
    "auth0-lock": "^14.1.0",
    "blueimp-file-upload": "^10.32.0",
    "blueimp-load-image": "^5.16.0",
    "cash-dom": "^8.1.5",
    "isomorphic-ws": "^5.0.0",
    "signature_pad": "^5.1.1"
  }
}
